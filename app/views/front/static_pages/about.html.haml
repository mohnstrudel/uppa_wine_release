-meta title: t('static.about.title')

.aboutInnerWrapper
  %a.toUppaWinery{:href => "#"} uppa winery
  %h2.headerCommon=t('static.about.headerCommon')
  %p.descriptionCommon=t('static.about.descriptionCommon_1')
  %p.descriptionCommon=t('static.about.descriptionCommon_2')
  %p.descriptionCommon=t('static.about.descriptionCommon_3')
  .aboutButtonsWrapper
    =link_to vintages_path do
      .goToCatalog.aboutButton
        =t('menu.to_catalog')
        .arrowSmallRight
    =link_to terra_path do
      .goToTerroir.aboutButton
        =t('menu.terra')
        .arrowSmallRight
  %h2.headerCommon=t('static.about.ourHistory')
  %p.descriptionCommon=t('static.about.descriptionCommon_4')
  .slickContainer
    %button#leftArrow.leftArrow.sliderArrow
    #slick-gallery.uppa-slick-theme
      %div
        = image_tag("about/pavelInBushes.jpg", alt: "Павел Швец")
        .slickTextContainer
          %h3=t('static.about.image_1.header')
          %p=t('static.about.image_1.desc')
      %div
        = image_tag("about/tractor.jpg", alt: "Трактор в винограднике")
        .slickTextContainer
          %h3=t('static.about.image_2.header')
          %p=t('static.about.image_2.desc')
      %div
        = image_tag("about/seaOfGreen.jpg", alt: "Море зелени")
        .slickTextContainer
          %h3=t('static.about.image_3.header')
          %p=t('static.about.image_3.desc')

      %div
        = image_tag("about/grapeOnBranch.jpg", alt: "Гроздь винограда")
        .slickTextContainer
          %h3=t('static.about.image_4.header')
          %p=t('static.about.image_4.desc')

    %button#rightArrow.rightArrow.sliderArrow
  %p.descriptionCommon=t('static.about.descriptionCommon_5')
  =link_to technology_path, class: 'technologyButton' do
    .aboutTechnology
      =t('menu.about_technology')
      .arrowSmallRight
  .mapContainerAbout
    #mapAbout
    %p=t('static.about.map.island')
    %p=t('static.about.map.city')
  .footerAbout
    %p.UPPA © UPPA by Pavel Shvets
    %a.ourName{:href => "http://redobureau.com"} сделано в redo
