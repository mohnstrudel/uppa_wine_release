-meta title: 'Контакты'

.contactsOuterWrapper
  .contactsInnerWrapper
    %a.toContacts{:href => "#"} контакты
    %h2.headerCommon Как добраться?

    %h3.titleCommon отдел продаж
    %p.descriptionCommon="#{link_to @setting.sales_phone, 'tel:'+@clean_sales_phone} - #{@setting.sales_name}".html_safe
    %p.descriptionCommon=link_to @setting.sales_email, "mailto:#{@setting.sales_email}".html_safe

    %h3.titleCommon визит на виноградник
    %p.descriptionCommon="#{link_to @setting.visit_phone, 'tel:'+@clean_visit_phone} - #{@setting.visit_name}".html_safe
    %p.descriptionCommon=link_to @setting.visit_email, "mailto:#{@setting.visit_email}".html_safe

    %h3.titleCommon адрес виноградника
    %p.descriptionCommon=@setting.address.try(:html_safe)
    %h3.titleCommon gps координаты
    %p.descriptionCommon N 44 33 676
    %p.descriptionCommon E 33 45 182

    %h3.titleCommon почтовый адрес
    %p.descriptionCommon=@setting.post_address.try(:html_safe)

    %a{:href => "https://goo.gl/maps/i9bAEjpwgLL2"}
      .showMap
        показать на карте
        .arrowSmallRight
    .aboutButtonsWrapper
      %a{:href => "logo.eps"}
        .downloadLogo.aboutButton
          Скачать логотип
          .arrowSmallRight

    .wannaVisit Хотите организовать визит?
    %a{:href => "/visit"}
      .knowMore
        узнать больше
        .arrowSmallRight
    .footerContacts
      %p.UPPA © UPPA by Pavel Shvets
      %a.ourName{:href => "http://redobureau.com"} сделано в redo
