        =f.text_field :visit_name, class: 'form-control', placeholder: "Имя сотрудника посещений (визитов)"
  .form-group
    .col-lg-2
    .col-lg-10
      =f.text_field :visit_email, class: 'form-control', placeholder: "Мейл сотрудника посещений (визитов)"
  .hr-line-dashed

-if object.respond_to?(:post_address)
  .form-group
    %label.col-sm-2.control-label
      Почтовый адрес
    .col-sm-10
      =f.bootsy_area :post_address, class: 'form-control', rows: 4